
<h1>Courses</h1>
<h3><%= @course.title %></h3>
<h4>Price: $<%= @course.formatted_price %></h4>

<%= image_tag(@course.image) %>

<% if Payment.where(course_id: @course.id, user_id: current_user.id).empty? %>
<%= button_to 'Buy Now' , {:controller => "payments", :action => "create", :course_id => @course.id, :user_id=> session[:user_id]} , :method=>:post  %>
<% else %>
<h2>Course already owned</h2>
<% end %>
